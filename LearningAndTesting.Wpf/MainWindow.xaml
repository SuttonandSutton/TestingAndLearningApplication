<Window x:Class="LearningAndTesting.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningAndTesting.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="375" Width="530"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="testMCButton" Content="Test - Mutiple Choice Answers" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="497" Height="100" Click="testMCButton_Click"/>
        <Button x:Name="testNoAnswersButton" Content="Test - No Answers" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top" Width="497" Height="100"/>
        <Button x:Name="learningCentreButton" Content="Learning Centre" HorizontalAlignment="Left" Margin="10,228,0,0" VerticalAlignment="Top" Width="497" Height="100" Click="learningCentreButton_Click"/>

    </Grid>
</Window>
